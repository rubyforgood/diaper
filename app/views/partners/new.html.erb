<div class="row wrapper border-bottom white-bg page-heading">
  <% content_for :title, "New - Partners - Agencies - #{current_organization.name}" %>
  <div class="col-lg-8">
    <h2>Partner Info for <%= current_organization.name %></h2>
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <%= link_to(dashboard_path) do %>
          <i class="fa fa-dashboard"></i> Home
        <% end %>
      </li>
      <li class="breadcrumb-item">
        <%= link_to(partners_path) do %>
          Partners
        <% end %>  
      </li>
      <li class="breadcrumb-item active">
        New Partner
      </li>
    </ol>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="wrapper wrapper-content animated fadeInRight">
      <div class="ibox-content p-xl">
        <div class="ibox-title">
          <h3>New Partner</h3>
        </div>
        <div class="ibox-content">
          <%= render partial: "form", object: @partner, locals: { submit_btn_options: { text: "Add Partner Agency" } } %>
        </div>
      </div>
    </div>
  </div>
</div>
