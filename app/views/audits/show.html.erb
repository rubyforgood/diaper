<section class="content-header">
  <% content_for :title, "Audits - Inventory - #{current_organization.name}" %>
  <h1>
    Inventory Audit
    <small>for <%= current_organization.name %></small>
  </h1>
  <ol class="breadcrumb">
    <li><%= link_to(dashboard_path) do %>
        <i class="fa fa-dashboard"></i> Home
      <% end %>
    </li>
    <li><%= link_to "All Adjustments", (audits_path) %></li>
    <li class="active">Audit (<%= @audit.created_at.strftime("%m/%d/%Y") %>)</li>
  </ol>
</section>

<!-- Main content -->
<section class="content">

  <!-- Default box -->
  <div class="box">
    <div class="box-header with-border">
      <h3 class="box-title">
        Audit (<%= @audit.created_at.strftime("%m/%d/%Y") %>) - <%= @audit.status.titleize %>
      </h3>
    </div>
    <div class="box-body">

      <p>
        <strong>Organization:</strong>
        <%= @audit.organization.name %>
      </p>

      <p>
        <strong>Storage location:</strong>
        <%= @audit.storage_location.name %>
      </p>
      <!-- /.box-header -->
      <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
          <tr>
            <th>&nbsp;</th>
            <th>Item</th>
            <th>Quantity</th>
          </tr>
          <% @audit.line_items.each do |line_item|  %>
            <tr class="<%= line_item.quantity > 0 ? "positive" : "negative" %>">
              <td><%= (line_item.quantity > 0) ? "Valid " : "Invalid " %></td>
              <td><%= line_item.item.name %></td>
              <td><%= line_item.quantity.abs %></td>
            </tr>
          <% end %>
        </table>
        <!-- /.box-body -->
      </div>

      <div class="box-footer text-center">
        <%= edit_button_to :edit_audit, {text: 'Resume Audit', size: 'sm'} if @audit.in_progress? %>
        <%= delete_button_to :audit, {text: 'Delete Audit', size: 'sm'} if @audit.in_progress? || @audit.confirmed? %>
        <%= submit_button_to audit_finalize_path(@audit.id), {text: 'Finalize Audit', size: 'sm'} if @audit.confirmed? %>
      </div>
      <!-- /.box-footer -->

      <!-- /.box -->
    </div>
  </div>
</section>