<section class="content-header">
  <% content_for :title, "New - Audit - Inventory - #{current_organization.name}" %>
  <h1>
    New Audit
    <small>for <%= current_organization.name %></small>
  </h1>
  <ol class="breadcrumb">
    <li>
      <%= link_to(dashboard_path) do %>
        <i class="fa fa-dashboard"></i> Home
      <% end %>
    </li>
    <li><%= link_to "Audit Adjustments", (audits_path) %></li>
    <li class="active">New Audit</li>
  </ol>
</section>

<section class="content">
  <div class="box">
    <div class="box-header with-border">
      <p class="box-title">Dummy Title</p>
    </div>

    <div class="box-body">
      <p class="help">Point1</p>
      <p class="help">Point2</p>

      <%= simple_form_for @audit, url: audits_path, html: { class: "storage-location-required"} do |f| %>
        <%= render partial:  "audits/source", object: f %>
        <%= modal_button_to("#confirmAuditModal", { text: "Submit" }) %>
        <%= render partial: "audits/confirm_audit_modal" %>
      <% end %>
    </div>
  </div>

  <%= render partial:  "donations/barcode_modal" %>
</section>